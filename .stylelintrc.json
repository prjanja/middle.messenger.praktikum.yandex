{
    "extends": ["stylelint-config-standard"],
    "ignoreFiles": ["dist/*"],
    "rules": {
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": ["/^color/"]
            }
        ],
        "at-rule-empty-line-before": "never",
        "selector-class-pattern": "^.*$"
    }
}

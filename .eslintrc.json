{
    "extends": ["airbnb"],

    "parser": "@typescript-eslint/parser",

    "plugins": ["@typescript-eslint"],

    "settings": {
        "import/resolver": {
            "node": { "extensions": [".js", ".ts", ".hbs?raw"] }
        }
    },

    "rules": {
        "import/prefer-default-export": "off",
        "import/extensions": "off"
    }
}

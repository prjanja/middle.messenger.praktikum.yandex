{
    "name": "praktikum_messenger",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "engines": {
        "node": ">=12.0"
    },
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "start": "npm run build && node server.js",
        "eslint": "eslint",
        "eslint:fix": "eslint \"src/**/*.ts\" --fix",
        "stylelint": "stylelint \"src/**/*.less\"",
        "stylelint:fix": "stylelint \"src/**/*.less\" --fix",
        "prettier:fix": "prettier --write \"src/**/*.ts\"",
        "pre-commit": "lint-staged",
        "test": "ts-mocha",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@types/chai": "^4.3.16",
        "@types/mocha": "^10.0.6",
        "@types/node": "^20.12.11",
        "@types/sinon": "^17.0.3",
        "@types/uuid": "^9.0.8",
        "@typescript-eslint/eslint-plugin": "^7.4.0",
        "@typescript-eslint/parser": "^7.4.0",
        "chai": "^5.1.1",
        "eslint": "^8.57.0",
        "eslint-config-airbnb": "^19.0.4",
        "express": "^4.18.3",
        "husky": "^8.0.3",
        "jsdom": "^24.0.0",
        "less": "^4.2.0",
        "lint-staged": "^15.2.2",
        "mocha": "^10.4.0",
        "prettier": "^3.2.5",
        "sinon": "^17.0.2",
        "stylelint": "^16.3.1",
        "stylelint-config-standard": "^36.0.0",
        "ts-mocha": "^10.0.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.2.2",
        "vite": "^5.1.4"
    },
    "dependencies": {
        "handlebars": "^4.7.8",
        "uuid": "^9.0.1"
    },
    "lint-staged": {
        ".ts": "eslint . --fix",
        ".less": "stylelint . --fix"
    }
}
